@model IEnumerable<selahattin.Models.siteIdentity>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
    <script src="https://code.jquery.com/jquery-1.11.3.min.js" type="text/javascript"></script>


<table class="table">
    <tr>
        <th>
            SİTE ADI
        </th>
        <th>
            RESİM
        </th>
        <th>
            AÇIKLAMA
        </th>
    </tr>


    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.name)
            </td>
            <td>
                <img class="img-responsive" src="~/@item.image" width="200" height="100" />
            </td>
            <td>
                @Html.Raw( item.comment)
            </td>
        </tr>

    }

</table>
<table>
    <tr>
        <th>
            İNSTAGRAM
        </th>
        <th>
            LİNKEDIN
        </th>
        <th>
            GİTHUB
        </th>
        <th>
            STACOVERFLOW
        </th>
        <th>
            CODEPEN
        </th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.instagram)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.linkedin)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.github)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.stacoverflow)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.codepen)
            </td>
            <td>
                @Html.ActionLink("GÜNCELLE", "Edit", new { id = item.id })
            </td>
        </tr>

    }

</table>


   




